<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dark_grey"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout

        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="120dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10dp"
            android:background="@color/grey"
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arbutus"
                    android:layout_gravity="center"
                    android:text="@string/first_character"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arbutus"
                    android:layout_gravity="center"
                    android:id="@+id/txt_first_character"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>

            <LinearLayout

                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arbutus"
                    android:layout_gravity="center"
                    android:text="@string/second_character"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arbutus"
                    android:layout_gravity="center"
                    android:id="@+id/txt_second_character"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:background="@color/grey"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/arbutus"
                android:text="@string/place_result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/arbutus"
                android:layout_gravity="center"
                android:id="@+id/txt_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

        <LinearLayout
            android:layout_margin="24dp"
            android:layout_alignParentBottom="true"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:backgroundTint="@color/dark_red"
                app:cornerRadius="0dp"
                android:layout_margin="10dp"
                android:textSize="12dp"
                android:layout_weight="1"
                android:fontFamily="@font/arbutus"
                android:layout_gravity="center"
                android:text="@string/imprevisto"
                android:id="@+id/btn_imprevisto"
                android:layout_width="0dp"
                android:layout_height="60dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:backgroundTint="@color/yellow_gold"
                app:cornerRadius="0dp"
                android:layout_margin="10dp"
                android:textSize="12dp"
                android:layout_weight="1"
                android:fontFamily="@font/arbutus"
                android:layout_gravity="center"
                android:text="@string/suggerimento"
                android:id="@+id/btn_suggerimento"
                android:layout_width="0dp"
                android:layout_height="60dp"></com.google.android.material.button.MaterialButton>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>